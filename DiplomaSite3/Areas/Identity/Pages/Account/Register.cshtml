        function ToggleField(field, userType) {
            let selectInput = document.querySelector('select#user-type');
            var value = selectInput.value;
            var text = selectInput.options[selectInput.selectedIndex].text.toLowerCase();
            selectInput.addEventListener('change', () => {
                text === userType ?
                    field.style.visibility = 'visible' :
                    field.style.visibility = 'hidden';
            });
        }
        ToggleField(document.querySelector('div#admin-pass-input'), 'admin')
    </script>

