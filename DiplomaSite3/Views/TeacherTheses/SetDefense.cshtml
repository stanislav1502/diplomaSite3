
@model AssignedThesisModel

@{
    ViewData["Title"] = Localizer["title"];
}

<h1>@Localizer["title"]</h1>

<div>
    
    <hr />
    <form asp-action="SetDefense" asp-controller="TeacherTheses" method="post">
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["thesisNameTxt"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Thesis.Title)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["thesisDescriptionTxt"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Thesis.Description)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisAssignedTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thesis.AssignDate)
        </dd>
		<dt class="col-sm-2">
			@Localizer["thesisStatusTxt"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Thesis.Status)
		</dd>

        <div class="form-group">
            <label asp-for="Thesis.DefendDate" class="control-label col-sm-2 fw-bold">@Localizer["thesisDefenseTxt"]</label>
			<input type="datetime-local" asp-for="Thesis.DefendDate" asp-format="{0:yyyy-MM-ddTHH:mm}" name="DefenseValue" class="form-control" style="max-width:fit-content"/>
            <span asp-validation-for="Thesis.DefendDate" class="text-danger"></span>
        </div>
        
        <dt class="col-sm-2">
            @Localizer["thesisTeacherTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FullName)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisStudentTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
    </dl>
    
        <input type="hidden" asp-for="ThesisID" name="ThesisID" value="@Model.ThesisID.ToString()" />
        
        <input type="submit" value="@Localizer["defenseBtn"]" class="btn btnreq m-1"/>
    </form>
    <a asp-action="Index" class="btn navbtn m-1"> @Localizer["backBtn"]</a>
</div>
