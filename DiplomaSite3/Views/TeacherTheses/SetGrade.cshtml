
@model AssignedThesisModel

@{
    ViewData["Title"] = Localizer["title"];
}

<h1>@Localizer["title"]</h1>

<div>
    
    <hr />
    <form asp-action="SetGrade" asp-controller="TeacherTheses" method="post">
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["thesisNameTxt"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Thesis.Title)
        </dd>
        <dt class = "col-sm-2">
            @Localizer["thesisDescriptionTxt"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Thesis.Description)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisAssignedTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thesis.AssignDate)
        </dd>
		<dt class="col-sm-2">
			@Localizer["thesisStatusTxt"]
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Thesis.Status)
		</dd>

            <dt class="col-sm-2">
                @Localizer["thesisDefenseTxt"]
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Thesis.DefendDate)
            </dd>

        <div class="form-group">
            <label asp-for="Thesis.Grade" class="control-label">@Localizer["thesisGradeTxt"]</label>
            <input asp-for="Thesis.Grade" class="form-control col-sm-10" style="max-width:fit-content" name="GradeValue" type="number" step="0.01" min="2" max="6" required />
            <span asp-validation-for="Thesis.Grade" class="text-danger"> </span>
        </div>
        
        <dt class="col-sm-2">
            @Localizer["thesisTeacherTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FullName)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisStudentTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
    </dl>
    
        <input type="hidden" asp-for="ThesisID" name="ThesisID" value="@Model.ThesisID.ToString()" />
        
        <input type="submit" value="@Localizer["gradeBtn"]" class="btn btnreq m-1" />
    </form>
    <a asp-action="Index" class="btn navbtn m-1"> @Localizer["backBtn"]</a>
</div>
