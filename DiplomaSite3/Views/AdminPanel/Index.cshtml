
@using DiplomaSite3.Enums
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<UserModel> SignInManager
@inject UserManager<UserModel> UserManager

@model AdminVM

@{
    ViewData["Title"] = "Index";
}

<h1>Admin Panel</h1>

@if (User.IsInRole("Admin"))
{
<form asp-controller="Admin" asp-action="Index" method="get">
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ThesisList![0].Thesis.Title)
            </th>
            <th>
                        @Html.DisplayNameFor(model => model.ThesisList![0].Thesis.Description)
            </th>
            <th>
                        @Html.DisplayNameFor(model => model.ThesisList![0].Thesis.DefendDate)
            </th>
            <th>
                        @Html.DisplayNameFor(model => model.ThesisList![0].Thesis.Grade)
            </th>
            <th>
                        @Html.DisplayNameFor(model => model.ThesisList![0].Thesis.Tags)
            </th>
            <th>
                        @Html.DisplayNameFor(model => model.ThesisList![0].Thesis.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model.ThesisList!)
        {
        <tr>
            <td>
                            @Html.DisplayFor(modelItem => item.Thesis.Title)
            </td>
            <td>
                            @Html.DisplayFor(modelItem => item.Thesis.Description)
            </td>
            <td>
                            @Html.DisplayFor(modelItem => item.Thesis.DefendDate)
            </td>
            <td>
                            @Html.DisplayFor(modelItem => item.Thesis.Grade)
            </td>
            <td>
                            @Html.DisplayFor(modelItem => item.Thesis.Tags)
            </td>
            <td>
                            @Html.DisplayFor(modelItem => item.Thesis.Status)
            </td>
			
            <td>
            <a asp-action="DEdit" asp-route-id="@item.ThesisID">Edit</a> |
            <a asp-action="DDetails" asp-route-id="@item.ThesisID">Details</a> |
            <a asp-action="DDelete" asp-route-id="@item.ThesisID">Delete</a>
            </td>
            
        </tr>
        }
    </tbody>

</table>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UsersList![0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersList![0].UserType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersList![0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersList![0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersList![0].LastName)
                </th>
                <th>
                    @Html.DisplayName("FN")
                </th>   
                <th>
                    @Html.DisplayNameFor(model => model.UsersList![0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersList![0].PhoneNumber)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.UsersList!)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
					<td>
                            @if (item.UserType == MyRolesEnum.Student)
                            {
                                Html.DisplayFor(modelItem => ((StudentModel)item).FacultyNumber);
                            }
                            else Html.Display(null);
                        </td>  
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                   
                    <td>
                    <a asp-action="UEdit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="UDetails" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="UDelete" asp-route-id="@item.Id">Delete</a>
                    </td>
                   
                </tr>
            }
        </tbody>

    </table>
    </div>
}