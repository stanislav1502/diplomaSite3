
@model AssignedThesisModel

@{
    ViewData["Title"] = Localizer["title"];
}

<div>

    <hr />
    <h3>@Localizer["areYouSureTxt"]</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["thesisNameTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thesis.Title)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisDescriptionTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thesis.Description)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisAssignedTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thesis.AssignDate)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisDefenseTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thesis.DefendDate)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisGradeTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thesis.Grade)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisStatusTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thesis.Status)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisTeacherTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FullName)
        </dd>
        <dt class="col-sm-2">
            @Localizer["thesisStudentTxt"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
    </dl>
    
    <form asp-action="DDelete">
        <input type="hidden" asp-for="ThesisID" />
        <input type="submit" value=@Localizer["deleteBtn"] class="btn btn-danger m-1" />

	</form>
    
    <a asp-action="Index" class="btn thesisbtn m-1">@Localizer["backBtn"]</a>

</div>
