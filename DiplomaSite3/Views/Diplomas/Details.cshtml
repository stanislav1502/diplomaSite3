            @Html.DisplayNameFor(model => model.DiplomaModel!.StudentID)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DiplomaModel!.StudentID == null)
            {
                <form asp-controller="Diplomas" asp-action="RequestDiploma" method="post">
                    <input type="hidden" asp-for="@Model.DiplomaModel.DiplomaID" value="@Model.DiplomaModel.DiplomaID" />
                    <input type="hidden" asp-for="@Model.DiplomaModel.StudentID" value="UserManager.GetUserId(User)" />
                    <input type="submit" value="Request Diploma" class="btn btnreq mx-1" />
                </form>
        }else
        {

                @Html.DisplayFor(model => model.DiplomaModel!.StudentID)

            }
        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole("Admin") || User.IsInRole("Teacher"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.DiplomaModel.DiplomaID">Edit</a> <span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>
