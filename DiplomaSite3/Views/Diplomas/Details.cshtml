        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiplomaModel!.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiplomaModel!.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiplomaModel!.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiplomaModel!.DefendDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiplomaModel!.DefendDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiplomaModel!.Grade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiplomaModel!.Grade)
        </dd>
        <dt class = "col-sm-2">
